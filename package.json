{
  "name": "awaazpilot-root",
  "private": true,
  "version": "1.0.0",
  "description": "AwaazPilot monorepo: Murf WebSocket voice app (frontend + backend)",
  "workspaces": ["server", "web"],
  "scripts": {
    "dev": "concurrently -n web,api -c green,blue \"pnpm --filter web dev\" \"pnpm --filter server dev\"",
    "build": "pnpm -r build",
    "start": "pnpm --filter server start",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.2",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "ws": "^8.18.3"
  }
}

