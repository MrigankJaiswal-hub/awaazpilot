{
  "name": "awaazpilot-server",
  "version": "1.0.0",
  "private": true,
  "description": "AwaazPilot backend (Express + WS proxy for Murf)",
  "main": "dist/server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "check": "tsc -p . --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "undici": "^6.19.8",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.10",
    "@types/ws": "^8.5.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}

